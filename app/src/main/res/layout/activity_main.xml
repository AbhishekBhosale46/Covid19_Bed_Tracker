<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smokewhite">

        <TextView
            android:id="@+id/top_txt"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="37dp"
            android:drawableStart="@drawable/ic_001_coronavirus"
            android:drawableLeft="@drawable/ic_001_coronavirus"
            android:drawablePadding="5dp"
            android:fontFamily="@font/visby"
            android:gravity="center"
            android:text="Covid 19 Bed Tracker"
            android:textColor="#3C3C3C"
            android:textSize="25sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_txt"
            android:layout_marginTop="6dp" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>